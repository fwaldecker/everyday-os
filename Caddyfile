    # MinIO API needs these headers
    header X-Content-Type-Options "nosniff"
    
    reverse_proxy minio:9000 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
}


# Neo4j Browser
{$NEO4J_HOSTNAME} {
    import security_headers
    
    # Neo4j Browser needs these headers
    header Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; connect-src 'self' wss://* ws://*; img-src 'self' data:;"
    
    reverse_proxy neo4j:7474 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
}

# MixPost - Social Media Management
social.{$BASE_DOMAIN} {
    import security_headers
    
    # MixPost needs these headers for social media APIs
    header Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://connect.facebook.net https://apis.google.com; style-src 'self' 'unsafe-inline'; img-src * data: blob:; font-src 'self' data:; connect-src 'self' https://*.facebook.com https://*.instagram.com https://*.youtube.com https://graph.facebook.com https://www.googleapis.com; frame-src 'self' https://www.facebook.com https://www.instagram.com https://accounts.google.com;"
    
    reverse_proxy mixpost:80 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
        
        # Increase timeouts for file uploads
        transport http {
            read_timeout 5m
            write_timeout 5m
        }
    }
}

# Import additional Caddy configurations
import /etc/caddy/addons/*.conf